<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/quantityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemTV"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-25dp"

            android:text="Quantity"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/quantityTV"
            android:layout_marginTop="9dp"
            android:text="Item Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/firstImgIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_marginStart="220dp"
            />

        <ImageView
            android:id="@+id/secondImgIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_toEndOf="@id/firstImgIV"
            android:layout_marginStart="5dp"
            />

        <ImageView
            android:id="@+id/thirdImgIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_toEndOf="@id/secondImgIV"
            android:layout_marginStart="5dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>